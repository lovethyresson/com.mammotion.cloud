      "template": "login_credentials",
      "options": {
        "title": {
          "en": "Connect to Mammotion",
          "nl": "Verbinden met Mammotion"
        },
        "usernameLabel": {
          "en": "Email",
          "nl": "E-mail"
        },
        "usernamePlaceholder": {
          "en": "email@example.com",
          "nl": "email@voorbeeld.nl"
        },
        "passwordLabel": {
          "en": "Password",
          "nl": "Wachtwoord"
        },
        "passwordPlaceholder": {
          "en": "Enter your password",
          "nl": "Voer uw wachtwoord in"
        }
      }
    },
    {
      "id": "list_devices",
      "template": "list_devices",
      "navigation": {
